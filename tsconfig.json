{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": [
            "es6",
            "dom"
        ],
        "declaration": true,
        "declarationDir": "types",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*",
                "assets/*"
            ],
            "undici-types": [
                "/node_modules/@types/undici"
            ]
        }
    },
    "include": [
        "src/**/*",
        "assets/**/*"
    ]
}